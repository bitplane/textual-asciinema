#asciinema-terminal {
    border: solid white;
    overflow: hidden;
}

#asciinema-terminal TerminalScrollView {
    overflow: hidden;
    scrollbar-size: 0 0;
}

#asciinema-controls {
    height: 3;
    dock: bottom;
}

#controls-container {
    height: 3;
    width: 100%;
}

#play-pause-btn {
    width: 3;
    min-width: 3;
    border: none;
    padding: 0;
    background: transparent;
}

#play-pause-btn:focus {
    border: none;
    background: transparent;
    text-style: none;
}

#play-pause-btn:hover {
    background: transparent;
}

#time-display {
    width: 15;
    text-align: center;
}

#timeline-scrubber {
    width: 1fr;
    height: 1;
    background: $surface;
    color: $primary;
    text-style: none;
}

#timeline-scrubber:hover {
    background: $surface-lighten-1;
}

#speed-display {
    width: auto;
    text-align: center;
    padding: 0 0 0 1;
    overflow: hidden;
}